						a(href="/contactus") Contact Us


		

		
		section(data-speed="10" data-type="background").main_cleanformatting#home_2
			div.row
				div.large-7.columns
					img(src="/img/zzish-logo.png" style="width: 300px; margin-bottom: 10px;")
