				div.large-5.columns
			
					div.small-12.large-centered.columns(style="text-position: center; background-color:#BBBBBB; border-radius: 20px 20px 20px 20px; margin-top: 5%")
						h4(align="center" style="color: #FFFFFF; font-family: 'Lato', sans-serif;") Sign Up
						

						form(name="input" action="/register" method="post")
							div.row
								div.small-7.columns
									input(type="text" name="email" placeholder="Your email address")
								div.small-5.columns
									button.button.small.round(type="submit" value="signup") Sign Up

							div.row
								a(href="/auth/github")
									div.small-8.large-centered.columns(style="background-color:#000000; border-radius: 20px 20px 20px 20px;")
										p
										
											img(src="/img/icons/github_login.jpeg" style="height: 30px; width 30px; padding-right: 10px; margin: 5px; ")
											Sign Sign up with github

									


		
		block content


		footer.row.footer_format
			hr

			div.row

				div.large-6.columns
					Zzish

				div.large-6.columns
					ul.inline-list.right
