	body
		nav.top-bar
			ul.title-area
				li.name
					h1 
						a(href="/#modulebase") Zzish

			section.top-bar-section
				ul.right.main_cleanformatting

					li
						a(href="/modules") Modules
					li
						a(href="/prices") Prices
					li
						a(href="/api_docs") API & Docs
