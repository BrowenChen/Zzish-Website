extends profile_layout

block name
	a(href="/profile/home" style="color: #FFFFFF; font-family: 'Lato', sans-serif;") #{name}

block content
	div.row
		hr
		h1(align="center") Apps
		hr

		div.small-8.large-centered.columns
			for app in apps
				div.row.appstyle
					h3 #{app.name} 
							img(onclick="deleteapp('#{app._id}')" src="/img/icons/delete.png" height="20" width="20" align="right")
					h3(style="font-size: 15px;") App ID: #{app._id}

					hr


					div.row
						div.medium-1.columns
							p
						div.medium-2.columns
							h3(style="font-size: 15px;") subject: 
						div.medium-9.columns
							h3(style="font-size: 15px;") #{app.details.subject}

					div.row
						div.medium-1.columns
							p
						div.medium-2.columns
							h3(style="font-size: 15px;") Audience: 
						div.medium-9.columns
							h3(style="font-size: 15px;") #{app.details.audience}

					div.row
						div.medium-1.columns
							p
						div.medium-2.columns
							h3(style="font-size: 15px;") OS: 
						div.medium-9.columns
							h3(style="font-size: 15px;") #{app.details.os}
				p &nbsp;
				
	script.
		function deleteapp(appid){
			if (confirm("Do you want to delete this app?") == true) {
				window.location.href = "/profile/app/delete/" + appid;
			}
		}




